<aside class="sidebar small-4 columns">

  <div class="widget info_widget">
    {{#if @blog.logo}}
    <a href="{{@blog.url}}" class="logo"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
    {{/if}}
    <p>{{@blog.description}}</p>
  </div>

  <div class="widget social_widget">
    {{> sidebar-social }}
  </div>

  <div class="widget tag_widget">
    {{> tags}}
  </div>

</aside>
